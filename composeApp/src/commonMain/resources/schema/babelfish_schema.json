{
  "$defs": {
    "ActivationDetectionConfig": {
      "properties": {
        "icon_only": {
          "default": false,
          "title": "Icon Only",
          "type": "boolean"
        },
        "overlay_mode": {
          "default": false,
          "title": "Overlay Mode",
          "type": "boolean"
        }
      },
      "title": "ActivationDetectionConfig",
      "type": "object"
    },
    "CacheConfig": {
      "properties": {
        "cache_dir": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Cache Dir"
        }
      },
      "title": "CacheConfig",
      "type": "object"
    },
    "HardwareConfig": {
      "properties": {
        "device": {
          "default": "auto",
          "title": "Device",
          "type": "string"
        },
        "microphone_index": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Microphone Index"
        },
        "onnx_model_dir": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Onnx Model Dir"
        },
        "onnx_execution_provider": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Onnx Execution Provider"
        },
        "quantization": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Quantization"
        }
      },
      "title": "HardwareConfig",
      "type": "object"
    },
    "PipelineConfig": {
      "properties": {
        "silence_threshold_ms": {
          "default": 400,
          "title": "Silence Threshold Ms",
          "type": "integer"
        },
        "update_interval_ms": {
          "default": 100,
          "title": "Update Interval Ms",
          "type": "integer"
        }
      },
      "title": "PipelineConfig",
      "type": "object"
    },
    "ServerConfig": {
      "properties": {
        "host": {
          "default": "127.0.0.1",
          "title": "Host",
          "type": "string"
        },
        "port": {
          "default": 8123,
          "title": "Port",
          "type": "integer"
        }
      },
      "title": "ServerConfig",
      "type": "object"
    },
    "ShortcutsConfig": {
      "properties": {
        "toggle_listening": {
          "default": "Ctrl+Shift+S",
          "title": "Toggle Listening",
          "type": "string"
        },
        "force_listen": {
          "default": "Ctrl+Shift+L",
          "title": "Force Listen",
          "type": "string"
        }
      },
      "title": "ShortcutsConfig",
      "type": "object"
    },
    "UIConfig": {
      "properties": {
        "verbose": {
          "default": false,
          "title": "Verbose",
          "type": "boolean"
        },
        "show_timestamps": {
          "default": true,
          "title": "Show Timestamps",
          "type": "boolean"
        },
        "shortcuts": {
          "$ref": "#/$defs/ShortcutsConfig"
        },
        "activation_detection": {
          "$ref": "#/$defs/ActivationDetectionConfig"
        }
      },
      "title": "UIConfig",
      "type": "object"
    },
    "VoiceConfig": {
      "properties": {
        "wakeword": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Wakeword"
        },
        "wakeword_sensitivity": {
          "title": "Wakeword Sensitivity",
          "type": "number"
        },
        "stop_words": {
          "items": {
            "type": "string"
          },
          "title": "Stop Words",
          "type": "array"
        }
      },
      "title": "VoiceConfig",
      "type": "object"
    }
  },
  "properties": {
    "hardware": {
      "$ref": "#/$defs/HardwareConfig"
    },
    "pipeline": {
      "$ref": "#/$defs/PipelineConfig"
    },
    "voice": {
      "$ref": "#/$defs/VoiceConfig"
    },
    "ui": {
      "$ref": "#/$defs/UIConfig"
    },
    "server": {
      "$ref": "#/$defs/ServerConfig"
    },
    "cache": {
      "$ref": "#/$defs/CacheConfig"
    }
  },
  "title": "BabelfishConfig",
  "type": "object"
}
