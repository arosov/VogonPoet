{
    "$schema": "https://opencode.ai/config.json",
    "experimental": {
        "lsp_tool": true
    },
    "permission": {
        "external_directory": {
            "~/dev/VogonPoet/babelfish/**": "allow"
        },
        "lsp": "allow"
    },
    "tui": {
        "status_bar": {
            "enabled": true,
            "show_elapsed_time": true,
            "show_git_status": true
        }
    },
    "plugin": ["opencode-gemini-auth@latest"],
    "agent": {
        "plan": {
            "mode": "primary",
            "model": "google/gemini-3-pro-preview",
            "tools": {
                "write": false,
                "edit": false,
                "bash": false
            }
        },
        "build": {
            "mode": "primary",
            "model": "google/gemini-3-flash-preview",
            "tools": {
                "write": true,
                "edit": true,
                "bash": true
            }
        }
    },
    "provider": {
        "google": {
            "models": {
                "gemini-2.5-flash": {
                    "options": {
                        "thinkingConfig": {
                            "thinkingBudget": 8192,
                            "includeThoughts": true
                        }
                    }
                },
                "gemini-2.5-pro": {
                    "options": {
                        "thinkingConfig": {
                            "thinkingBudget": 8192,
                            "includeThoughts": true
                        }
                    }
                },
                "gemini-3-flash-preview": {
                    "options": {
                        "thinkingConfig": {
                            "thinkingLevel": "high",
                            "includeThoughts": true
                        }
                    }
                },
                "gemini-3-pro-preview": {
                    "options": {
                        "thinkingConfig": {
                            "thinkingLevel": "high",
                            "includeThoughts": true
                        }
                    }
                }
            }
        }
    }
}
