{
  "$schema": "https://opencode.ai/config.json",
  "experimental": {
      "lsp_tool": true
  },
  "permission": {
    "external_directory": {
      "~/dev/VogonPoet/babelfish/**": "allow"
    },
    "lsp": "allow"
  },
  "tui": {
    "status_bar": {
      "enabled": true,
      "show_elapsed_time": true,
      "show_git_status": true
    }
  },
  "plugin": ["opencode-gemini-auth@latest"],
  "agent": {
    "plan": {
      "mode": "primary",
      "model": "opencode/gemini-3-pro",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "build": {
      "mode": "primary",
      "model": "moonshot/kimi-k2-5",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  }
}
